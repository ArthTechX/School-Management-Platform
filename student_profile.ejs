                    <div class="chart12">
                        <canvas id="myChart1" style="width:100%;max-width:600px">Attendance</canvas>      
                    </div><br>
                    <div class="chart2">        
                        <canvas id="myChart2" style="width:100%;max-width:600px">Attendance</canvas>
