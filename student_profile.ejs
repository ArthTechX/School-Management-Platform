                <h2 id="username">Ankur Verma</h2>
                <p>
                    <span id="age">17</span> years old
                    <br>
                    Class: <span id="class">XI-A</span>
                    <br>
                    Gender: <span id="gender">Male</span>
                    <br>
                    Date of Birth: <span id="dob">15-09-2007</span>
                    <br>
                    Email: <span id="email">ankur@gmail.com</span>
                </p>
                </div>
                <button id="edit-btn">Edit</button>
            </div>
            </div>

            <div id="edit-profile-modal" class="modal">
            <div class="modal-content">
                <span class="close">&times;</span>
                <h2>Edit Profile</h2>
                <form id="edit-profile-form">
                <label for="edit-age">Age:</label>
                <input type="number" id="edit-age" name="edit-age" required><br>

                <label for="edit-class">Class:</label>
                <input type="text" id="edit-class" name="edit-class" required><br>

                <label for="edit-gender">Gender:</label>
                <select id="edit-gender" name="edit-gender" required>
                    <option value="male">Male</option>
                    <option value="female">Female</option>
                    <option value="other">Other</option>
                </select><br>

                <label for="edit-dob">Date of Birth:</label>
                <input type="date" id="edit-dob" name="edit-dob" required><br>

                <label for="edit-email">Email:</label>
                <input type="email" id="edit-email" name="edit-email" required><br>

                <button type="submit">Save</button>
                </form>
            </div>
            </div>    
        </div>
